<!-- Collection Header Section -->
{%- if section.settings.show_collection_header -%}
<section class="relative bg-background py-16 border-b border-border">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl">
      <h1 class="font-display text-7xl md:text-9xl text-foreground mb-4 tracking-tight">
        {%- if section.settings.collection_title != blank -%}
          {{ section.settings.collection_title }}
        {%- else -%}
          {{ collection.title | upcase }}
        {%- endif -%}
      </h1>
      <p class="text-xl md:text-2xl text-muted-foreground font-medium">
        {%- if section.settings.collection_description != blank -%}
          {{ section.settings.collection_description }}
        {%- elsif collection.description != blank -%}
          {{ collection.description }}
        {%- else -%}
          Smells like everything you want, and nothing you don't.
        {%- endif -%}
      </p>
    </div>
  </div>
</section>
{%- endif -%}

