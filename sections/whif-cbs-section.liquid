{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="whif-cbs-section color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="whif-cbs-content">
      {%- if section.settings.heading != blank -%}
        <h2 class="whif-cbs__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="whif-cbs__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}

      <div class="whif-cbs__grid">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'cbs_item' -%}
              <div class="cbs-item" {{ block.shopify_attributes }}>
                {%- if block.settings.cbs_icon != blank -%}
                  <div class="cbs-item__icon">
                    {{
                      block.settings.cbs_icon
                      | image_url: width: 80
                      | image_tag: loading: 'lazy', alt: block.settings.cbs_title
                    }}
                  </div>
                {%- endif -%}

                <div class="cbs-item__content">
                  <h3>{{ block.settings.cbs_title }}</h3>

                  {%- if block.settings.cbs_subtitle != blank -%}
                    <p class="cbs-subtitle">{{ block.settings.cbs_subtitle }}</p>
                  {%- endif -%}

                  {%- if block.settings.cbs_description != blank -%}
                    <div class="cbs-description rte">{{ block.settings.cbs_description }}</div>
                  {%- endif -%}

                  {%- if block.settings.cbs_features != blank -%}
                    <ul class="cbs-features">
                      {%- assign features = block.settings.cbs_features | split: ',' -%}
                      {%- for feature in features -%}
                        <li>{{ feature | strip }}</li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}

                  {%- if block.settings.cbs_link != blank -%}
                    <a href="{{ block.settings.cbs_link }}" class="cbs-link button button--secondary">
                      {{ block.settings.link_text | default: 'Learn More' }}
                    </a>
                  {%- endif -%}
                </div>
              </div>

            {%- when 'cbs_stats' -%}
              <div class="cbs-stats" {{ block.shopify_attributes }}>
                <h3>{{ block.settings.stats_title }}</h3>
                <div class="stats-container">
                  {%- if block.settings.stat_1_number != blank -%}
                    <div class="stat-box">
                      <span class="stat-number">{{ block.settings.stat_1_number }}</span>
                      <span class="stat-label">{{ block.settings.stat_1_label }}</span>
                      {%- if block.settings.stat_1_description != blank -%}
                        <p class="stat-description">{{ block.settings.stat_1_description }}</p>
                      {%- endif -%}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.stat_2_number != blank -%}
                    <div class="stat-box">
                      <span class="stat-number">{{ block.settings.stat_2_number }}</span>
                      <span class="stat-label">{{ block.settings.stat_2_label }}</span>
                      {%- if block.settings.stat_2_description != blank -%}
                        <p class="stat-description">{{ block.settings.stat_2_description }}</p>
                      {%- endif -%}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.stat_3_number != blank -%}
                    <div class="stat-box">
                      <span class="stat-number">{{ block.settings.stat_3_number }}</span>
                      <span class="stat-label">{{ block.settings.stat_3_label }}</span>
                      {%- if block.settings.stat_3_description != blank -%}
                        <p class="stat-description">{{ block.settings.stat_3_description }}</p>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
              </div>

            {%- when 'cbs_process' -%}
              <div class="cbs-process" {{ block.shopify_attributes }}>
                <h3>{{ block.settings.process_title }}</h3>
                <div class="process-steps">
                  {%- if block.settings.step_1_title != blank -%}
                    <div class="process-step">
                      <div class="step-number">1</div>
                      <div class="step-content">
                        <h4>{{ block.settings.step_1_title }}</h4>
                        <p>{{ block.settings.step_1_description }}</p>
                      </div>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.step_2_title != blank -%}
                    <div class="process-step">
                      <div class="step-number">2</div>
                      <div class="step-content">
                        <h4>{{ block.settings.step_2_title }}</h4>
                        <p>{{ block.settings.step_2_description }}</p>
                      </div>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.step_3_title != blank -%}
                    <div class="process-step">
                      <div class="step-number">3</div>
                      <div class="step-content">
                        <h4>{{ block.settings.step_3_title }}</h4>
                        <p>{{ block.settings.step_3_description }}</p>
                      </div>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.step_4_title != blank -%}
                    <div class="process-step">
                      <div class="step-number">4</div>
                      <div class="step-content">
                        <h4>{{ block.settings.step_4_title }}</h4>
                        <p>{{ block.settings.step_4_description }}</p>
                      </div>
                    </div>
                  {%- endif -%}
                </div>
              </div>

            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_cta_banner -%}
        <div class="cbs-cta-banner">
          <div class="cta-content">
            <h3>{{ section.settings.cta_title | default: 'Ready to Get Started?' }}</h3>
            <p>
              {{
                section.settings.cta_description
                | default: 'Contact us today to learn more about our CBS solutions.'
              }}
            </p>
            {%- if section.settings.cta_button_link != blank -%}
              <a href="{{ section.settings.cta_button_link }}" class="button button--primary">
                {{ section.settings.cta_button_text | default: 'Get Started' }}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

