{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<!-- Hero Video Section -->
<section class="relative h-screen w-full overflow-hidden bg-black">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full">
    <video
      class="w-full h-full object-cover"
      playsinline
      webkit-playsinline
      loop
      muted
      autoplay
      poster="{{ section.settings.video_poster | default: 'https://images.squarespace-cdn.com/content/v1/67da0c2c5d3b414ebdd380a0/4b22870d-131d-41e4-be3b-7457035d8762/whiffed+capture.png' | image_url: width: 1920, height: 1080 }}"
    >
      {% if section.settings.video_url != blank %}
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      {% endif %}
      <!-- Fallback for browsers that don't support video -->
      <img
        src="{{ section.settings.video_poster | default: 'https://images.squarespace-cdn.com/content/v1/67da0c2c5d3b414ebdd380a0/4b22870d-131d-41e4-be3b-7457035d8762/whiffed+capture.png' | image_url: width: 1920, height: 1080 }}"
        alt="Whiffed Aromas Hero"
        width="1920"
        height="1080"
        class="w-full h-full object-cover"
      >
    </video>
  </div>

  <!-- Overlay for better text readability -->
  <div class="absolute inset-0 bg-black/20"></div>

  <!-- Content Overlay -->
  <div class="relative z-10 flex items-center justify-center h-full">
    <div class="text-center text-white px-4 max-w-4xl mx-auto">
      {% for block in section.blocks %}
        {% case block.type %}
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8">
              <a
                href="{{ block.settings.button_link | default: '#' }}"
                class="inline-flex items-center justify-center px-8 py-4 {% if block.settings.button_style_secondary %}border-2 border-white text-white hover:bg-white hover:text-black{% else %}bg-white text-black hover:bg-white/90{% endif %} font-semibold rounded-full transition-all duration-300 transform hover:scale-105"
              >
                {{ block.settings.button_label | default: 'Shop Now' }}
              </a>
            </div>
        {% endcase %}
      {% endfor %}

      <!-- Default content if no blocks -->
      {% if section.blocks.size == 0 %}
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">Experience Whiffed Aromas</h1>
        <p class="text-lg md:text-xl lg:text-2xl mb-8 text-white/90 max-w-2xl mx-auto">
          Transform your space with premium scent diffusion technology
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href="{{ routes.all_products_collection_url }}"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-black font-semibold rounded-full hover:bg-white/90 transition-all duration-300 transform hover:scale-105"
          >
            Shop Now
          </a>
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

