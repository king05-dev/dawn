{{ 'section-whif-machine-by-spaces.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="whif-machine-by-spaces-section color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="whif-machine-by-spaces-content">
      {%- if section.settings.heading != blank -%}
        <h2 class="whif-machine-by-spaces__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <div class="whif-machine-by-spaces__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}

      <div class="whif-machine-by-spaces__grid">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'space_type' -%}
              <div class="space-type-card" {{ block.shopify_attributes }}>
                {%- if block.settings.space_image != blank -%}
                  <div class="space-type-card__image">
                    {{ block.settings.space_image | image_url: width: 400 | image_tag: loading: 'lazy', alt: block.settings.space_name }}
                  </div>
                {%- endif -%}
                <div class="space-type-card__content">
                  <h3>{{ block.settings.space_name }}</h3>
                  <p class="space-size">{{ block.settings.space_size }}</p>
                  {%- if block.settings.space_description != blank -%}
                    <p>{{ block.settings.space_description }}</p>
                  {%- endif -%}
                  
                  {%- if block.settings.recommended_machine != blank -%}
                    <div class="recommended-machine">
                      <h4>Recommended Machine:</h4>
                      <div class="machine-recommendation">
                        {%- assign product = block.settings.recommended_machine -%}
                        {%- if product.featured_media -%}
                          {{ product.featured_media | image_url: width: 150 | image_tag: loading: 'lazy', alt: product.title }}
                        {%- endif -%}
                        <div class="machine-info">
                          <h5>{{ product.title }}</h5>
                          <p class="price">{{ product.price | money }}</p>
                          <a href="{{ product.url }}" class="button button--secondary">View Machine</a>
                        </div>
                      </div>
                    </div>
                  {%- endif -%}
                </div>
              </div>
            {%- when 'space_calculator' -%}
              <div class="space-calculator" {{ block.shopify_attributes }}>
                <h3>{{ block.settings.calculator_title }}</h3>
                <p>{{ block.settings.calculator_description }}</p>
                <div class="calculator-form">
                  <label for="space-size-input">Enter your space size (sq ft):</label>
                  <input type="number" id="space-size-input" placeholder="e.g., 500">
                  <button type="button" class="button button--primary" onclick="calculateMachine()">
                    Find My Machine
                  </button>
                </div>
                <div id="calculator-result" class="calculator-result" style="display: none;">
                  <p>Based on your space size, we recommend:</p>
                  <div id="recommended-machine-result"></div>
                </div>
              </div>
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
function calculateMachine() {
  const spaceSize = document.getElementById('space-size-input').value;
  const resultDiv = document.getElementById('calculator-result');
  const resultContent = document.getElementById('recommended-machine-result');
  
  if (spaceSize) {
    let recommendation = '';
    if (spaceSize <= 200) {
      recommendation = 'Small Space Machine - Perfect for rooms up to 200 sq ft';
    } else if (spaceSize <= 500) {
      recommendation = 'Medium Space Machine - Ideal for areas up to 500 sq ft';
    } else if (spaceSize <= 1000) {
      recommendation = 'Large Space Machine - Great for spaces up to 1000 sq ft';
    } else {
      recommendation = 'Commercial Machine - Designed for large commercial spaces';
    }
    
    resultContent.innerHTML = `<p><strong>${recommendation}</strong></p>`;
    resultDiv.style.display = 'block';
  }
}
</script>

{% schema %}
{
  "name": "Whif Machine by Spaces",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Find the Perfect Machine for Your Space",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Different spaces require different scenting solutions. Find the perfect machine for your needs.</p>",
      "label": "Description"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "space_type",
      "name": "Space Type",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "space_image",
          "label": "Space image"
        },
        {
          "type": "text",
          "id": "space_name",
          "default": "Small Office",
          "label": "Space name"
        },
        {
          "type": "text",
          "id": "space_size",
          "default": "Up to 500 sq ft",
          "label": "Space size"
        },
        {
          "type": "textarea",
          "id": "space_description",
          "default": "Perfect for small offices, boutiques, and personal spaces.",
          "label": "Space description"
        },
        {
          "type": "product",
          "id": "recommended_machine",
          "label": "Recommended machine"
        }
      ]
    },
    {
      "type": "space_calculator",
      "name": "Space Calculator",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "calculator_title",
          "default": "Space Size Calculator",
          "label": "Calculator title"
        },
        {
          "type": "textarea",
          "id": "calculator_description",
          "default": "Not sure which machine is right for you? Use our calculator to find the perfect match.",
          "label": "Calculator description"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "View All Machines",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "Use outline button style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Whif Machine by Spaces",
      "blocks": [
        {
          "type": "space_type"
        },
        {
          "type": "space_type"
        },
        {
          "type": "space_calculator"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
