<section class="relative py-32 overflow-hidden">
  <div class="absolute inset-0">
    <img
      alt="Fall Background"
      loading="lazy"
      decoding="async"
      data-nimg="fill"
      class="object-cover opacity-40"
      src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/attachments/gen-images/public/autumn-leaves-and-cozy-fall-atmosphere-dark-moody--6FLpa96ipWtZ2Oqoj26u3t8LTwoto6.jpg"
      style="position: absolute; height: 100%; width: 100%; inset: 0px; color: transparent;"
    >
    <div class="absolute inset-0 bg-gradient-to-r to-background via-background/80 from-transparent"></div>
  </div>
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2
          class="font-serif text-5xl md:text-6xl lg:text-7xl font-bold mb-6 text-balance"
          style="font-family: var(--font-playfair);"
        >
          FALL VIBES, BUT MAKE IT DESIGNER
        </h2>
        <p class="text-xl mb-8 text-muted-foreground">WARM. SMOOTH. COZY</p>
        <button
          data-slot="button"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg:not([class*='size-'])]:size-4 shrink-0 [&amp;_svg]:shrink-0 outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive shadow-xs h-10 rounded-md has-[&gt;svg]:px-4 bg-primary hover:bg-primary/90 text-primary-foreground px-8"
        >
          SHOP FALL SCENTS
        </button>
      </div>
      <div class="relative h-[500px]">
        <img
          alt="Fall Collection"
          loading="lazy"
          decoding="async"
          data-nimg="fill"
          class="object-contain"
          src="https://cdn.shopify.com/s/files/1/0713/6057/7719/files/smoke_26_mirrors._bottle_06acb11b-21b6-4d36-be2c-da2b8955f1f0.webp?v=1759119176"
          style="position: absolute; height: 100%; width: 100%; inset: 0px; color: transparent;"
        >
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Whif Promo Oils Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Premium Essential Oils",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Discover our collection of high-quality essential oils for your scenting needs.</p>",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "Promotional image"
    },
    {
      "type": "collection",
      "id": "oils_collection",
      "label": "Oils collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4,
      "label": "Number of products to show"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "feature_icon",
          "label": "Feature icon"
        },
        {
          "type": "text",
          "id": "feature_title",
          "default": "Feature Title",
          "label": "Feature title"
        },
        {
          "type": "textarea",
          "id": "feature_description",
          "default": "Feature description goes here.",
          "label": "Feature description"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Shop All Oils",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "Use outline button style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Whif Promo Oils Section",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
