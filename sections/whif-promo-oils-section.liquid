{{ 'section-whif-promo-oils.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="whif-promo-oils-section color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="whif-promo-oils-content">
      {%- if section.settings.heading != blank -%}
        <h2 class="whif-promo-oils__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <div class="whif-promo-oils__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}

      {%- if section.settings.promo_image != blank -%}
        <div class="whif-promo-oils__image">
          {%- assign image_height = section.settings.promo_image.width | divided_by: section.settings.promo_image.aspect_ratio -%}
          {{ section.settings.promo_image | image_url: width: section.settings.promo_image.width | image_tag:
            loading: 'lazy',
            width: section.settings.promo_image.width,
            height: image_height,
            alt: section.settings.promo_image.alt | escape
          }}
        </div>
      {%- endif -%}

      {%- if section.settings.oils_collection != blank -%}
        <div class="whif-promo-oils__products">
          {%- for product in section.settings.oils_collection.products limit: section.settings.products_to_show -%}
            <div class="oil-product-card">
              <a href="{{ product.url }}">
                {%- if product.featured_media -%}
                  {{ product.featured_media | image_url: width: 250 | image_tag: loading: 'lazy', alt: product.title }}
                {%- endif -%}
                <h4>{{ product.title }}</h4>
                <div class="price">
                  {%- if product.compare_at_price > product.price -%}
                    <span class="price-sale">{{ product.price | money }}</span>
                    <span class="price-compare">{{ product.compare_at_price | money }}</span>
                    <span class="price-discount">
                      {{ product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round }}% OFF
                    </span>
                  {%- else -%}
                    <span class="price-regular">{{ product.price | money }}</span>
                  {%- endif -%}
                </div>
                {%- if product.description != blank -%}
                  <p class="product-description">{{ product.description | strip_html | truncate: 100 }}</p>
                {%- endif -%}
              </a>
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'feature' -%}
            <div class="whif-promo-oils__feature" {{ block.shopify_attributes }}>
              {%- if block.settings.feature_icon != blank -%}
                <div class="feature-icon">
                  {{ block.settings.feature_icon | image_url: width: 60 | image_tag: loading: 'lazy', alt: block.settings.feature_title }}
                </div>
              {%- endif -%}
              <h4>{{ block.settings.feature_title }}</h4>
              <p>{{ block.settings.feature_description }}</p>
            </div>
          {%- when 'button' -%}
            {%- if block.settings.button_label != blank -%}
              <a
                {% if block.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.button_link }}"
                {% endif %}
                class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.button_label | escape }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Whif Promo Oils Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Premium Essential Oils",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Discover our collection of high-quality essential oils for your scenting needs.</p>",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "Promotional image"
    },
    {
      "type": "collection",
      "id": "oils_collection",
      "label": "Oils collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4,
      "label": "Number of products to show"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "feature_icon",
          "label": "Feature icon"
        },
        {
          "type": "text",
          "id": "feature_title",
          "default": "Feature Title",
          "label": "Feature title"
        },
        {
          "type": "textarea",
          "id": "feature_description",
          "default": "Feature description goes here.",
          "label": "Feature description"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Shop All Oils",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "Use outline button style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Whif Promo Oils Section",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
