{% comment %}
  Media Press Section - Showcases press coverage and backlinks
  Features: Responsive grid, SEO-friendly links, professional styling
{% endcomment %}

<section class="media-press-section py-16 bg-background">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
            <h2 class="text-3xl md:text-4xl font-bold mb-4 text-foreground">
              {{ block.settings.heading | default: "As Seen In" }}
            </h2>
          {% when 'subheading' %}
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
              {{ block.settings.subheading | default: "Discover what the media is saying about our premium scent diffusion technology" }}
            </p>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Press Coverage Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {% for block in section.blocks %}
        {% if block.type == 'press_item' %}
          <div class="press-item bg-card border border-border rounded-lg p-6 hover:shadow-lg transition-all duration-300 group">
            <!-- Publisher Logo/Name -->
            {% if block.settings.publisher_logo != blank %}
              <div class="mb-4">
                <img 
                  src="{{ block.settings.publisher_logo | image_url: width: 200 }}" 
                  alt="{{ block.settings.publisher_name }}"
                  class="h-12 object-contain"
                  width="200"
                  height="48"
                  loading="lazy"
                >
              </div>
            {% else %}
              <div class="mb-4">
                <h3 class="text-xl font-bold text-primary">{{ block.settings.publisher_name }}</h3>
              </div>
            {% endif %}

            <!-- Article Title -->
            <h4 class="text-lg font-semibold mb-3 text-foreground group-hover:text-primary transition-colors">
              {{ block.settings.article_title }}
            </h4>

            <!-- Article Excerpt -->
            {% if block.settings.article_excerpt != blank %}
              <p class="text-muted-foreground mb-4 text-sm leading-relaxed">
                {{ block.settings.article_excerpt | truncate: 120 }}
              </p>
            {% endif %}

            <!-- Metrics -->
            <div class="flex flex-wrap gap-4 mb-4 text-xs text-muted-foreground">
              {% if block.settings.publication_date != blank %}
                <span class="flex items-center gap-1">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  {{ block.settings.publication_date | date: "%b %d, %Y" }}
                </span>
              {% endif %}
              {% if block.settings.reach_number != blank %}
                <span class="flex items-center gap-1">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  {{ block.settings.reach_number }}
                </span>
              {% endif %}
            </div>

            <!-- Read More Link -->
            {% if block.settings.article_url != blank %}
              <a 
                href="{{ block.settings.article_url }}" 
                target="_blank" 
                rel="noopener noreferrer nofollow"
                class="inline-flex items-center gap-2 text-primary hover:text-primary/80 font-medium text-sm transition-colors"
              >
                Read Article
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Stats Summary -->
    {% assign total_articles = 0 %}
    {% assign total_reach = 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'press_item' %}
        {% assign total_articles = total_articles | plus: 1 %}
        {% if block.settings.reach_number != blank %}
          {% assign reach_clean = block.settings.reach_number | remove: ',' | remove: ' ' | remove: 'visits/month' | remove: 'reach' %}
          {% assign total_reach = total_reach | plus: reach_clean %}
        {% endif %}
      {% endif %}
    {% endfor %}

    {% if total_articles > 0 %}
      <div class="bg-primary/5 border border-primary/20 rounded-lg p-8 text-center">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <div class="text-3xl font-bold text-primary mb-2">{{ total_articles }}+</div>
            <div class="text-muted-foreground">Press Features</div>
          </div>
          {% if total_reach > 0 %}
            <div>
              <div class="text-3xl font-bold text-primary mb-2">{{ total_reach | divided_by: 1000000 }}M+</div>
              <div class="text-muted-foreground">Total Reach</div>
            </div>
          {% endif %}
          <div>
            <div class="text-3xl font-bold text-primary mb-2">Top Tier</div>
            <div class="text-muted-foreground">Media Coverage</div>
          </div>
        </div>
      </div>
    {% endif %}

    <!-- CTA Button -->
    {% for block in section.blocks %}
      {% if block.type == 'cta_button' %}
        <div class="text-center mt-8">
          <a 
            href="{{ block.settings.button_url | default: '/pages/media' }}" 
            class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-primary-foreground px-8 py-3 rounded-md font-semibold transition-colors"
          >
            {{ block.settings.button_text | default: "View All Press Coverage" }}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Media Press Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "As Seen In",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "subheading",
      "name": "Subheading",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "subheading",
          "default": "Discover what the media is saying about our premium scent diffusion technology",
          "label": "Subheading"
        }
      ]
    },
    {
      "type": "press_item",
      "name": "Press Item",
      "settings": [
        {
          "type": "text",
          "id": "publisher_name",
          "label": "Publisher Name",
          "default": "BuzzBlastPR"
        },
        {
          "type": "image_picker",
          "id": "publisher_logo",
          "label": "Publisher Logo (optional)"
        },
        {
          "type": "text",
          "id": "article_title",
          "label": "Article Title",
          "default": "Whiffed Aromas Disrupts Fragrance Industry with Hotel-Level Scenting Technology for Homes"
        },
        {
          "type": "textarea",
          "id": "article_excerpt",
          "label": "Article Excerpt (optional)",
          "info": "Brief description of the article content"
        },
        {
          "type": "url",
          "id": "article_url",
          "label": "Article URL",
          "info": "Link to the full article"
        },
        {
          "type": "text",
          "id": "publication_date",
          "label": "Publication Date",
          "placeholder": "2024-01-15",
          "info": "Enter date in YYYY-MM-DD format"
        },
        {
          "type": "text",
          "id": "reach_number",
          "label": "Reach/Views",
          "placeholder": "25,536,500 visits/month",
          "info": "Audience reach or monthly visits"
        }
      ]
    },
    {
      "type": "cta_button",
      "name": "CTA Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "default": "View All Press Coverage",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Media Press Section",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "subheading"
        },
        {
          "type": "press_item",
          "settings": {
            "publisher_name": "BuzzBlastPR",
            "article_title": "Whiffed Aromas Disrupts Fragrance Industry with Hotel-Level Scenting Technology for Homes",
            "reach_number": "25,536,500 visits/month",
            "article_url": "https://www.whiffedaromas.com"
          }
        },
        {
          "type": "cta_button"
        }
      ]
    }
  ]
}
{% endschema %}
